		<template id="report_gestion_fqm_view">
			<t t-call="report.html_container">
				<t t-call="report.external_layout">
					<div class="page">
						<h1 class="text-capitalize text-center">Reporte de Gestión FMQ</h1>
						<div class="row">
							<div class="col-xs-1"><b>Caja y folio</b></div>
							<div class="col-xs-2"><b>Fecha y hora</b></div>
							<div class="col-xs-1"><b>Código cliente</b></div>
							<div class="col-xs-1"><b>Cliente</b></div>
							<div class="col-xs-2"><b>Código del producto</b></div>
							<div class="col-xs-1"><b>Unidades totales</b></div>
							<div class="col-xs-4"><b>Productos</b></div>
						</div>
						<div class="row">
							<t t-foreach="docs" t-as="doc">
								<div class="row">
									<!-- Caja y folio -->
									<div class="col-xs-1">
										<span t-field="doc.name"></span>
									</div>
							
									<!-- Fecha y hora -->
									<div class="col-xs-2">
										<span t-field="doc.date_order"></span>
									</div>
							
									<!-- Código del cliente -->
									<div class="col-xs-1">
										<span t-field="doc.partner_id.barcode"></span>
									</div>
							
									<!-- Cliente -->
									<div class="col-xs-1">
										<span t-field="doc.partner_id"></span>
									</div>
							
									<!-- Codigos de los productos -->
									<div class="col-xs-2">
										<t t-set="contador_productos" t-value="0"></t>
										<t t-foreach="doc.lines" t-as="l">
											<span t-field="l.product_id.barcode"></span>
											<t t-set="contador_productos" t-value="contador_productos + 1"></t>
										</t>
									</div>
							
									<!-- Unidades totales -->
									<div class="col-xs-1">
										<span t-esc="contador_productos"></span>
									</div>
							
									<!-- Productos descripcion-->
									<div class="col-xs-4">
										<t t-foreach="doc.lines" t-as="l">
											<span t-field="l.product_id"></span>
										</t>
									</div>
								</div>
							</t>
						</div>
					</div>
			    </t>
			</t>
		</template>
	</data>
